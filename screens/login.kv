<LoginScreen>:
    MDBoxLayout:
        md_bg_color:[1,0.4,0,1]
        orientation: 'vertical'

        MDBoxLayout:
            radius:[0,0,200,20]
            md_bg_color:[1,1,1,1]
            size_hint_y: None
            height:3/4*root.height
            MDLabel:
                text:"Welcome to Onqode"
                font_size:dp(30)
                halign:"center"
                color:"black"
                bold:True

            
         
        MDBoxLayout:
            orientation: 'vertical'
            md_bg_color:[1,0.4,0,1]
            size_hint_y: None
            height:1/4*root.height

            AnchorLayout:
                anchor_x:"center"
                anchor_y:"top"               
                MDTextField:
                    id:email
                    hint_text:"your email"
                    helper_text_mode:"on_error"
                    size_hint_x: None
                    width: root.width/2
            AnchorLayout:
                anchor_x:"center"
                anchor_y:"top"
                MDTextField:
                    id:password
                    hint_text:"your password"
                    helper_text_mode:"on_error"
                    size_hint_x: None
                    width: root.width/2
                    password:True
            AnchorLayout:
                anchor_x:"center"
                anchor_y:"center"
                MDRaisedButton:
                    text:"Login"
                    text_color:[0,0,0,1]
                    md_bg_color:[1,0.3,0,1]
                    radius:[20]
                    on_release:root.login()


    


